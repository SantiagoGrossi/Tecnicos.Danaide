@model Inspinia_MVC5_SeedProject.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Crear nuevo usuario :)</h4>
                <hr />
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Nombre, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Roless, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.DropDownListFor(m => m.RolesId, new SelectList(Model.RolesEnum, "Id", "Nombre"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RolesId)
                    </div>
                </div>
                @*<div class="form-group">
                    @Html.LabelFor(m => m.Roles)
                    @Html.DropDownListFor(m => m.Roles, new SelectList(Model.Roles, "Id", "Nombre"), "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Roles)
                </div>*@

                @*<div class="form-group">
                    @Html.LabelFor(m => m.EsSoporte, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.CheckBoxFor(m => m.EsSoporte, new { @class = "form-control" })
                    </div>
                </div>*@
                @*<div class="form-group">
                    @Html.LabelFor(m => m.Color, new { @class = "col-md-5 control-label color" })
                    <div class="col-md-7">
                        <input type="color" id="color" name="color" value="#ff0000">
                    </div>
                </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" class="btn btn-primary" value="Registrar" />
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>

